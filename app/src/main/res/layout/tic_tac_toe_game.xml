<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/mainLayout"
        android:layout_width="match_parent"
        android:padding="@dimen/common_padding"
        android:layout_height="wrap_content">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/titleBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/common_padding"
            app:layout_constraintTop_toTopOf="@id/mainLayout"
            android:background="@drawable/layout_rounded_corners_gray">
            <amrish.ravidas.com.alpha.ViewIconTicTacToeAnimate
                android:id="@+id/gameIcon"
                android:layout_width="75dp"
                android:layout_height="75dp" />
            <TextView
                android:id="@+id/gameTitleText"
                style="@style/TextTitle"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingStart="@dimen/large_padding"
                android:paddingEnd="@dimen/large_padding"
                android:text="Tic Tac Toe"
                android:layout_gravity="top"
                android:gravity="center"
                app:layout_constraintLeft_toRightOf="@id/gameIcon"
                app:layout_constraintTop_toTopOf="@id/titleBar"
                app:layout_constraintBottom_toBottomOf="@id/titleBar"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/playerBar1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/common_padding"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/titleBar"
            android:background="@drawable/layout_rounded_corners_white">
            <amrish.ravidas.com.alpha.ViewTicTacToeCell
                android:id="@+id/player1CellType"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="@dimen/common_margin"
                android:layout_marginStart="@dimen/common_margin"
                app:layout_constraintTop_toTopOf="@id/playerBar1"
                app:layout_constraintBottom_toBottomOf="@id/playerBar1"
                app:layout_constraintStart_toStartOf="parent"
                app:cellType="cross"
                app:cellColor="@color/colorWhite"/>
            <amrish.ravidas.com.alpha.ViewToggleButton
                android:id="@+id/player1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:text="Human"
                app:selected="false"
                app:layout_constraintStart_toEndOf="@id/player1CellType"
                app:layout_constraintTop_toTopOf="@id/playerBar1"
                app:layout_constraintBottom_toBottomOf="@id/playerBar1"
                android:layout_marginStart="@dimen/large_margin"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/playerBar2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/common_padding"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/playerBar1"
            android:background="@drawable/layout_rounded_corners_white">
            <amrish.ravidas.com.alpha.ViewTicTacToeCell
                android:id="@+id/player2CellType"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="@dimen/common_margin"
                android:layout_marginStart="@dimen/common_margin"
                app:layout_constraintTop_toTopOf="@id/playerBar2"
                app:layout_constraintBottom_toBottomOf="@id/playerBar2"
                app:layout_constraintStart_toStartOf="parent"
                app:cellType="solidCircle"
                app:cellColor="@color/colorWhite"/>
            <!--<TextView-->
                <!--android:id="@+id/player2Text"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--app:layout_constraintStart_toEndOf="@id/player2CellType"-->
                <!--app:layout_constraintTop_toTopOf="@id/playerBar2"-->
                <!--app:layout_constraintBottom_toBottomOf="@id/playerBar2"-->
                <!--android:layout_marginStart="@dimen/large_margin"-->
                <!--android:text="Player 2"-->
                <!--style="@style/TextHeader1"/>-->
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/playerBar2"
            app:layout_constraintBottom_toBottomOf="parent">
            <amrish.ravidas.com.alpha.ViewTicTacToeGameBoard
                android:id="@+id/gameBoard"
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/large_margin"
                android:layout_marginBottom="@dimen/large_margin"
                android:layout_height="match_parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>