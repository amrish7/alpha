<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable name="viewModel" type="amrish.ravidas.com.alpha.TicTacToeGameViewModel"/>
        <import type="java.lang.String" />
    </data>
    <android.support.constraint.ConstraintLayout
        android:id="@+id/mainLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <android.support.constraint.ConstraintLayout
            android:id="@+id/titleBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/common_padding"
            app:layout_constraintTop_toTopOf="@id/mainLayout"
            android:background="@drawable/layout_rounded_corners_gray">
            <amrish.ravidas.com.alpha.IconTicTacToeAnimate
                android:id="@+id/gameIcon"
                android:layout_width="85dp"
                android:layout_height="85dp" />
            <TextView
                android:id="@+id/gameTitleText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:text="Game #"
                android:paddingStart="20dp"
                style="@style/WhiteTitleText"
                app:layout_constraintLeft_toRightOf="@id/gameIcon"
                app:layout_constraintTop_toTopOf="@id/titleBar"/>
            <TextView
                android:id="@+id/gameId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:text="@{String.valueOf(viewModel.gameId)}"
                style="@style/WhiteTitleText"
                app:layout_constraintLeft_toRightOf="@id/gameTitleText"/>
            <TextView
                android:id="@+id/playerOneText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:text="(Human) Player 1"
                style="@style/WhiteRegularText"
                android:paddingStart="20dp"
                app:layout_constraintTop_toBottomOf="@id/gameTitleText"
                app:layout_constraintLeft_toRightOf="@id/gameIcon"/>
            <TextView
                android:id="@+id/playerTwoText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:text="(Human) Player 2"
                style="@style/WhiteRegularText"
                android:paddingStart="20dp"
                app:layout_constraintTop_toBottomOf="@id/playerOneText"
                app:layout_constraintLeft_toRightOf="@id/gameIcon"/>
        </android.support.constraint.ConstraintLayout>
    </android.support.constraint.ConstraintLayout>
</layout>