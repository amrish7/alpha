<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable name="viewModel" type="amrish.ravidas.com.alpha.TicTacToeGameViewModel"/>
        <import type="java.lang.String" />
    </data>
    <android.support.constraint.ConstraintLayout
        android:id="@+id/mainLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <android.support.constraint.ConstraintLayout
            android:id="@+id/titleBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/common_padding"
            app:layout_constraintTop_toTopOf="@id/mainLayout"
            android:background="@drawable/layout_rounded_corners_gray">
            <amrish.ravidas.com.alpha.ViewIconTicTacToeAnimate
                android:id="@+id/gameIcon"
                android:layout_width="120dp"
                android:layout_height="120dp" />
            <TextView
                android:id="@+id/gameTitleText"
                style="@style/TextTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="20dp"
                android:text="Game #"
                android:layout_gravity="top"
                android:gravity="center"
                app:layout_constraintLeft_toRightOf="@id/gameIcon"
                app:layout_constraintTop_toTopOf="@id/titleBar" />
            <TextView
                android:id="@+id/gameId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:text="@{String.valueOf(viewModel.gameId)}"
                style="@style/TextTitle"
                app:layout_constraintLeft_toRightOf="@id/gameTitleText"/>
            <amrish.ravidas.com.alpha.ViewTicTacToeBlock
                android:id="@+id/blockPlayer1"
                android:layout_width="30dp"
                android:layout_height="30dp"
                app:blockType="circle"
                android:layout_marginStart="15dp"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@id/gameTitleText"
                app:layout_constraintLeft_toRightOf="@id/gameIcon"/>
            <TextView
                android:id="@+id/playerOneText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:text="Human"
                style="@style/TextHeader"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@id/gameTitleText"
                app:layout_constraintLeft_toRightOf="@id/blockPlayer1"/>
            <amrish.ravidas.com.alpha.ViewTicTacToeBlock
                android:id="@+id/blockPlayer2"
                android:layout_width="30dp"
                android:layout_height="30dp"
                app:blockType="cross"
                android:layout_marginStart="15dp"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@id/blockPlayer1"
                app:layout_constraintLeft_toRightOf="@id/gameIcon"/>
            <TextView
                android:id="@+id/playerTwoText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:text="AI"
                style="@style/TextHeader"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                android:layout_marginTop="15dp"
                app:layout_constraintTop_toBottomOf="@id/playerOneText"
                app:layout_constraintLeft_toRightOf="@id/blockPlayer2"/>
        </android.support.constraint.ConstraintLayout>
    </android.support.constraint.ConstraintLayout>
</layout>